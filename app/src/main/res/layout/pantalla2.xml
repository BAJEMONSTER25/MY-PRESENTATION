<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lala"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBryant"
        android:text="NOMBRE:    BRYANT ANTONIO
                        JIMENEZ ESPINOZA"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="@color/mio"
        android:text="EDAD: 17 "
        android:textSize="21dp" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBryant"
        android:text="FECHA DE NACIMIENTO 03/10/1998"
        android:textSize="21dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="@color/mio"
        android:text="ESTUDIO: ING. SISTEMAS DE
                            INFORMACION "
        android:textSize="21dp" />
    <TextView
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBryant"
        android:text="DEPORTE FAVORITO: FOOTBALL"
        android:textSize="21dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mio"
        android:text="HOBBYES : ESCUCHAR MUSICA,
                            PROGRAMAR Y
                             IR AL GYM "
        android:textSize="21dp"
        />
    <TextView
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBryant"
        android:text="PENSAMIENTO:
             CADAPERSONA QUE VES ESTA
                LUCHANDO UNA BATALLA,
            DE LA QUE TU NO SABES NADA.
                              SE AMABLE."
        android:textSize="21dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/lolo"
        android:id="@+id/imageView" />


</LinearLayout>